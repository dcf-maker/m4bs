source $HOME/.m4bs/src/m4bs-common
source $HOME/.m4bs/src/m4bs-utils

# Comprobamos estado de MEGA

get_user

mega-whoami 2>&1

exitstatus=$?
if [ $exitstatus = 0 ]; then
    #echo "$(tput setaf 2)ONLINE"
    do_log "[INFO ] Chequeo status: ONLINE."
    echo "ONLINE"
    exit 0
else
    #echo "$(tput setaf 1)OFFLINE"
    do_log "[INFO ] Chequeo status: OFFLINE."
    echo "OFFLINE"
    exit 1
fi

