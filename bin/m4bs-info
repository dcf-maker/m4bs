get_user() {
	if [ "$EUID" == 0 ]; then
		echo "Por favor no ejecute con sudo / root"
		exit 1
	fi
}

get_user

# Variable Globales

CONFIG_PATH=$HOME/.m4bs
CONFIG_FILE=$CONFIG_PATH/etc/m4bs.cfg
LOG_FILE=$CONFIG_PATH/temp/m4bs.log

# Funciones del programa

do_log() {
	fecha=`date '+%Y-%m-%d %H:%M'`
	echo "[$fecha]:$1" >>"$LOG_FILE"
}

if [ -f "${CONFIG_FILE}" ]; then
	source "${CONFIG_FILE}"
else
	do_log "[ERROR] El archivo de configuraciones no existe. Vuelva a reinstalar la aplicaci√≥n"
	exit 1
fi

# Paramos MEGA
CHECK=$(m4bs-status)

if [ "$CHECK" = "OFFLINE" ]; then
    echo "M4-BACKUP SYSTEM no esta arrancado. Por favor arranquelo."
    exit 57
else
    echo "----------------------------------------------------------------------------------"
    echo "                   INFORMACION CONFIGURACION M4-BACKUP SYSTEM"
    echo "----------------------------------------------------------------------------------"
    echo ""
    cat $CONFIG_FILE | sed "s/PASSWORD=$PASSWORD/PASSWORD=******/gi"
    echo ""
    echo "----------------------------------------------------------------------------------"
    echo "                             INFORMACION BACKUP"
    echo "----------------------------------------------------------------------------------"
    echo ""
    mega-sync
    echo ""
    echo "----------------------------------------------------------------------------------"
    echo "                          INFORMACION CUENTA MEGA"
    echo "----------------------------------------------------------------------------------"
    echo ""
    mega-whoami -l
fi