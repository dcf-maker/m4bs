%vendor dcf-maker
%license LICENSE
%readme README.md
%description Kung Foo firewall software for your firewall.
%version 0.0.40

%requires git
%requires telnet
%requires telnetd
%requires curl
%requires dialog
%requires apache2
%requires jq
%requires megacmd

$prefix=/usr
$exec_prefix=/usr
$bindir=${exec_prefix}/bin
$datadir=/usr/share
$docdir=${datadir}/doc/epm
$libdir=/usr/lib
$mandir=/usr/share/man
$srcdir=.

c 755 root root ${bindir}/m4bs-cli usr/bin/m4bs-cli
c 755 root root ${bindir}/m4bs-info usr/bin/m4bs-info
c 755 root root ${bindir}/m4bs-log usr/bin/m4bs-log
c 755 root root ${bindir}/m4bs-mount usr/bin/m4bs-mount
c 755 root root ${bindir}/m4bs-start usr/bin/m4bs-start
c 755 root root ${bindir}/m4bs-status usr/bin/m4bs-status
c 755 root root ${bindir}/m4bs-stop usr/bin/m4bs-stop
c 755 root root ${bindir}/m4bs-update usr/bin/m4bs-update

