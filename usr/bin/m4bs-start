get_user() {
	if [ "$EUID" == 0 ]; then
		echo "Por favor no ejecute con usuario root"
		exit 1
	fi
}

do_log() {
  logger -p local0.notice -t [${0##*/}]:[$$] $1
}

get_user

# Cargamos fichero de propiedades y version

m4bs-config

CONFIG_FILE=$HOME/.m4bs.conf
source $CONFIG_FILE

# Arrancamos Mega
CHECK=$(m4bs-status)

if [ "$CHECK" = "OFFLINE" ]; then

    if [ -z "$USER" ] || [ -z "$PASSWORD" ] || [ -z "$LOCALPATH" ] || [ -z "$REMOTEPATH" ] || [ -z "$IPM4" ]
    then
        do_log "[ERROR] Faltan por configurar datos del backup."
        echo "[ERROR] Faltan por configurar datos del backup."
        exit 8
    fi
    pkill -f "mega-cmd-server" # Matamos el servidor de MEGA por si estubiera bloqueando
    mega-login $USER $PASSWORD
    exitstatus=$?
    if [ $exitstatus = 0 ]; then
        do_log "[INFO ] Servicio MEGA arrancado."
        sleep 1
        mega-sync $LOCALPATH $REMOTEPATH 
        RET=$?
        if [ $RET = 0 ]; then
            do_log "[INFO ] Sincronizando $LOCALPATH con MEGA."
            mega-sync
        else
            do_log "[ERROR: $RET] al arrancar la sincronizaci√≥n."
            mega-logout
            exit $RET
        fi
    else
        do_log "[ERROR: $exitstatus ] al arrancar el servicio MEGA."
        exit $exitstatus
    fi
else
    do_log "[INFO ] M4BS ya esta arrancado."
    echo "M4-BACKUP SYSTEM ya esta arrancado"
fi

exit 0