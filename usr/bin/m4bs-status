get_user() {
	if [ "$EUID" == 0 ]; then
		echo "Por favor no ejecute con sudo / root"
		exit 1
	fi
}

get_user

# Variable Globales

CONFIG_FILE=/etc/m4bs.conf

# Funciones del programa

do_log() {
  logger -t "[${0##*/}]:$1"
}

# Comprobamos estado de MEGA

SALIDA=$(mega-whoami 2>&1)
exitstatus=$?
if [ $exitstatus = 0 ]; then
    #echo "$(tput setaf 2)ONLINE"
    do_log "[INFO ] Chequeo status: ONLINE."
    echo "ONLINE"
    exit 0
else
    #echo "$(tput setaf 1)OFFLINE"
    do_log "[INFO ] Chequeo status: OFFLINE."
    echo "OFFLINE"
    exit 1
fi

