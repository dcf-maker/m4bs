get_user() {
	if [ "$EUID" == 0 ]; then
		echo "Por favor no ejecute con usuario root"
		exit 1
	fi
}

do_log() {
  logger -p local0.notice -t [${0##*/}]:[$$] $1
}

get_user

# Paramos MEGA

mega-logout
exitstatus=$?
if [ $exitstatus = 0 ]; then
    do_log "[INFO ] Servicio MEGA parado."
else
    do_log "[ERROR] $exitstatus al parar el servicio MEGA."
    exit 1
fi